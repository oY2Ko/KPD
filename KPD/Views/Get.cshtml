
@{ 
    ViewData["Title"] = "GET";
}


@{
        <form method="get">
            <h1>Просмотр победителя</h1>
            

            <label for="questionNumber" class="text">Номер вопроса</label>
            <p><input type="text" name="questionNumber" class="Input-Text" /></p>

            <label for="password" class="text">Пароль</label>
            <p><input type="password" name="password"  class="Input-Text" /><p>

            <p><input type="submit" id="Input-Submit"></p>
        </form>
}
<style>
    input:-webkit-autofill {
        -webkit-box-shadow: 0 0 0 30px #393E46 inset;
        -webkit-text-size-adjust: 0%;
    }


    .Input-Text {
        border: 1px solid #4ECCA3; /*цвет рамки */
        border-radius: 5px; /*закругление углов (общее) */
